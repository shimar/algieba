<%# _form.html.erb %>
<%= simple_form_for(@form,
                    {url: signin_url,
                      defaults: {input_html: {class: 'form-control'}},
                      html: {class: 'form-horizontal'}}) do |f| %>
  <div class="form-group">
    <%= render 'shared/errors' %>
  </div>
  <div class="form-group">
    <%= f.input :email, placeholder: 'user@domain.com'  %>
  </div>
  <div class="form-group">
    <%= f.input :password, placeholder: 'your password.' %>
  </div>
  <div class="form-group">
    <%= button_tag(type: 'submit', class: 'btn btn-default', id: 'signin-button') do %>
      Sign In <span class="glyphicon glyphicon-log-in"></span>
    <% end %>
  </div>
<% end %>
