<%= simple_form_for(@user, {defaults: {input_html: {class: 'form-control'}}, html: {class: 'form-horizontal'}}) do |f| %>

  <div class="form-group">
    <%= render partial: 'shared/errors', locals: {model: @user} %>
  </div>

  <div class="form-group">
    <%= f.input :email, placeholder: 'user@domain.com' %>
  </div>
  <div class="form-group">
    <%= f.input :email_confirmation, placeholder: 'Email Address again.', required: true %>
  </div>
  <div class="form-group">
    <%= f.input :password, placeholder: 'your password.' %>
  </div>
  <div class="form-group">
    <%= f.input :password_confirmation, placeholder: 'password again.',  required: true %>
  </div>
  
  <div class="form-group actions">
    <%= button_tag(type: 'submit', class: 'btn btn-primary', id: 'signup-button') do %>
      <% if @user.new_record? %>
        <span class="glyphicon glyphicon-ok"></span> Sing Up
      <% else %>
        Save
      <% end %>    
    <% end %>
    <%= link_to('Back', root_url, class: 'btn btn-default') %>
  </div>
<% end %>
