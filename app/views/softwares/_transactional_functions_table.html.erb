<% if @transactional_functions.empty? %>
  <table class="table">
    <tr>
      <td class="text-warning">
        <span class="glyphicon glyphicon-warning-sign"></span> No transactional functions.
      </td>
    </tr>
  </table>
<% else %>
  <table class="table">
    <thead>
      <tr>
        <th>#</th>
        <th>Name</th>
        <th>Type</th>
        <th>DET</th>
        <th>FTR</th>
        <th>FP</th>
      </tr>
    </thead>
    <tbody>
      <% @transactional_functions.each_with_index do |tf, index| %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= tf.name %></td>
          <td><%= tf.type %></td>
          <td><%= tf.det %></td>
          <td><%= tf.ftr %></td>
          <td><%= tf.function_point %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
